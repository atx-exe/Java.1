        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" valignment="CENTER"/>
        </rowConstraints>
        <Button GridPane.columnIndex="0" GridPane.rowIndex="0" text="Завершить игру"/>
